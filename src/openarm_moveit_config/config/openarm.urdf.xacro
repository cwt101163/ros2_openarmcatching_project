<?xml version="1.0"?>
<robot name="openarm" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- ==================== Arguments ==================== -->
  <xacro:arg name="use_camera" default="true"/>
  <xacro:arg name="use_table" default="true"/>
  <xacro:arg name="gazebo" default="false"/> <!-- 预留，暂未用 -->

  <!-- ==================== Includes / Materials ==================== -->
  <material name="aluminum">
    <color rgba="0.5 0.5 0.5 1"/>
  </material>
  <material name="plastic">
    <color rgba="0.1 0.1 0.1 1"/>
  </material>

  <!-- ==================== World & Base ==================== -->
  <link name="world"/>

  <link name="openarm_body_link0">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://openarm_description/meshes/body/v10/visual/body_link0.dae" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://openarm_description/meshes/body/v10/collision/body_link0_symp.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="13.89"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1.653" ixy="0.0" ixz="0.0" iyy="1.653" iyz="0.0" izz="0.051"/>
    </inertial>
  </link>

  <joint name="openarm_body_world_joint" type="fixed">
    <parent link="world"/>
    <child link="openarm_body_link0"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- ==================== Arm Macro ==================== -->
  <xacro:macro name="openarm_arm" params="prefix reflect">

    <!-- Fixed joint from body to arm base -->
    <joint name="${prefix}_openarm_body_link0_joint" type="fixed">
      <parent link="openarm_body_link0"/>
      <child link="${prefix}_link0"/>
      <origin xyz="0 ${reflect * 0.031} 0.698" rpy="${reflect * -1.5708} 0 0"/>
    </joint>

    <!-- Link0 -->
    <link name="${prefix}_link0">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/arm/v10/visual/link0.dae"
                scale="0.001 ${reflect * -0.001} 0.001"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/arm/v10/collision/link0_symp.stl"
                scale="0.001 ${reflect * -0.001} 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="1.1432284943239561"/>
        <origin xyz="-0.0009483362816297526 ${reflect * -0.0001580207020448382} 0.03076860287587199" rpy="0 0 0"/>
        <inertia ixx="0.001128" ixy="${reflect * -4e-06}" ixz="-3.3e-05"
                 iyy="0.000962" iyz="${reflect * -7e-06}" izz="0.00147"/>
      </inertial>
    </link>

    <!-- Link1 -->
    <link name="${prefix}_link1">
      <visual>
        <origin xyz="0 0 -0.0625" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/arm/v10/visual/link1.dae"
                scale="0.001 ${reflect * -0.001} 0.001"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 -0.0625" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/arm/v10/collision/link1_symp.stl"
                scale="0.001 ${reflect * -0.001} 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="1.1416684646202298"/>
        <origin xyz="0.0011467657911800769 ${reflect * -3.319987657026362e-05} 0.05395284380736254" rpy="0 0 0"/>
        <inertia ixx="0.001567" ixy="${reflect * -1e-06}" ixz="-2.9e-05"
                 iyy="0.001273" iyz="${reflect * 1e-06}" izz="0.001016"/>
      </inertial>
    </link>

    <joint name="${prefix}_joint1" type="revolute">
      <parent link="${prefix}_link0"/>
      <child link="${prefix}_link1"/>
      <origin xyz="0 0 0.0625" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit effort="40" lower="${reflect * -3.490659}" upper="${reflect * 1.396263}" velocity="16.754666"/>
    </joint>

    <!-- Link2 -->
    <link name="${prefix}_link2">
      <visual>
        <origin xyz="0.0301 0 -0.1225" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/arm/v10/visual/link2.dae"
                scale="0.001 ${reflect * -0.001} 0.001"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0.0301 0 -0.1225" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/arm/v10/collision/link2_symp.stl"
                scale="0.001 ${reflect * -0.001} 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.2775092746011571"/>
        <origin xyz="0.00839629182351943 ${reflect * -2.0145102027597523e-08} 0.03256649300522363" rpy="0 0 0"/>
        <inertia ixx="0.000359" ixy="${reflect * 1e-06}" ixz="-0.000109"
                 iyy="0.000376" iyz="${reflect * 1e-06}" izz="0.000232"/>
      </inertial>
    </link>

    <joint name="${prefix}_joint2" type="revolute">
      <parent link="${prefix}_link1"/>
      <child link="${prefix}_link2"/>
      <origin xyz="-0.0301 0 0.06" rpy="${reflect * -1.57079632679} 0 0"/>
      <axis xyz="-1 0 0"/>
      <limit effort="40" lower="${reflect * -3.3161253267948965}" upper="${reflect * 0.17453267320510335}" velocity="16.754666"/>
    </joint>

    <!-- Link3 -->
    <link name="${prefix}_link3">
      <visual>
        <origin xyz="0 0 -0.18875" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/arm/v10/visual/link3.dae"
                scale="0.001 ${reflect * -0.001} 0.001"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 -0.18875" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/arm/v10/collision/link3_symp.stl"
                scale="0.001 ${reflect * -0.001} 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="1.073863338202347"/>
        <origin xyz="-0.002104752099628911 ${reflect * 0.0005549085042607548} 0.09047470545721961" rpy="0 0 0"/>
        <inertia ixx="0.004372" ixy="${reflect * 1e-06}" ixz="1.1e-05"
                 iyy="0.004319" iyz="${reflect * -3.6e-05}" izz="0.000661"/>
      </inertial>
    </link>

    <joint name="${prefix}_joint3" type="revolute">
      <parent link="${prefix}_link2"/>
      <child link="${prefix}_link3"/>
      <origin xyz="0.0301 0 0.06625" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit effort="27" lower="-1.570796" upper="1.570796" velocity="5.445426"/>
    </joint>

    <!-- Link4 -->
    <link name="${prefix}_link4">
      <visual>
        <origin xyz="0 -0.0315 -0.3425" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/arm/v10/visual/link4.dae"
                scale="0.001 0.001 0.001"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 -0.0315 -0.3425" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/arm/v10/collision/link4_symp.stl"
                scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.6348534566833373"/>
        <origin xyz="-0.0029006831074562967 -0.03030575826634669 0.06339637422196209" rpy="0 0 0"/>
        <inertia ixx="0.000623" ixy="-1e-06" ixz="-1.9e-05"
                 iyy="0.000511" iyz="3.8e-05" izz="0.000334"/>
      </inertial>
    </link>

    <joint name="${prefix}_joint4" type="revolute">
      <parent link="${prefix}_link3"/>
      <child link="${prefix}_link4"/>
      <origin xyz="0 0.0315 0.15375" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit effort="27" lower="0.0" upper="2.443461" velocity="5.445426"/>
    </joint>

    <!-- Link5 -->
    <link name="${prefix}_link5">
      <visual>
        <origin xyz="0 0 -0.438" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/arm/v10/visual/link5.dae"
                scale="0.001 ${reflect * -0.001} 0.001"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 -0.438" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/arm/v10/collision/link5_symp.stl"
                scale="0.001 ${reflect * -0.001} 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.6156588026168502"/>
        <origin xyz="-0.003049665024221911 ${reflect * 0.0008866902457326625} 0.043079803024980934" rpy="0 0 0"/>
        <inertia ixx="0.000423" ixy="${reflect * -8e-06}" ixz="6e-06"
                 iyy="0.000445" iyz="${reflect * -6e-06}" izz="0.000324"/>
      </inertial>
    </link>

    <joint name="${prefix}_joint5" type="revolute">
      <parent link="${prefix}_link4"/>
      <child link="${prefix}_link5"/>
      <origin xyz="0 -0.0315 0.0955" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit effort="7" lower="-1.570796" upper="1.570796" velocity="20.943946"/>
    </joint>

    <!-- Link6 -->
    <link name="${prefix}_link6">
      <visual>
        <origin xyz="-0.0375 0 -0.5585" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/arm/v10/visual/link6.dae"
                scale="0.001 ${reflect * -0.001} 0.001"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="-0.0375 0 -0.5585" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/arm/v10/collision/link6_symp.stl"
                scale="0.001 ${reflect * -0.001} 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.475202773187987"/>
        <origin xyz="-0.037136587005447405 ${reflect * 0.00033230528343419053} -9.498374522309838e-05" rpy="0 0 0"/>
        <inertia ixx="0.000143" ixy="${reflect * 1e-06}" ixz="1e-06"
                 iyy="0.000157" iyz="${reflect * 1e-06}" izz="0.000159"/>
      </inertial>
    </link>

    <joint name="${prefix}_joint6" type="revolute">
      <parent link="${prefix}_link5"/>
      <child link="${prefix}_link6"/>
      <origin xyz="0.0375 0 0.1205" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
      <limit effort="7" lower="-0.785398" upper="0.785398" velocity="20.943946"/>
    </joint>

    <!-- Link7 -->
    <link name="${prefix}_link7">
      <visual>
        <origin xyz="0 0 -0.5585" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/arm/v10/visual/link7.dae"
                scale="0.001 ${reflect * -0.001} 0.001"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 -0.5585" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/arm/v10/collision/link7_symp.stl"
                scale="0.001 ${reflect * -0.001} 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.4659771327380578"/>
        <origin xyz="6.875510271106056e-05 ${reflect * -0.01266175250761268} 0.06951945409987448" rpy="0 0 0"/>
        <inertia ixx="0.000639" ixy="${reflect * 1e-06}" ixz="1e-06"
                 iyy="0.000497" iyz="${reflect * 8.9e-05}" izz="0.000342"/>
      </inertial>
    </link>

    <joint name="${prefix}_joint7" type="revolute">
      <parent link="${prefix}_link6"/>
      <child link="${prefix}_link7"/>
      <origin xyz="-0.0375 0 0" rpy="0 0 0"/>
      <axis xyz="0 ${reflect * -1} 0"/>
      <limit effort="7" lower="-1.570796" upper="1.570796" velocity="20.943946"/>
    </joint>

    <!-- ==================== Hand Macro (inline for simplicity) ==================== -->
    <link name="${prefix}_hand">
      <visual>
        <origin xyz="0 0 -0.6585" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/ee/openarm_hand/visual/hand.dae" scale="0.001 0.001 0.001"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 -0.6585" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/ee/openarm_hand/collision/hand.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.35"/>
        <origin xyz="0 0.002 0.03" rpy="0 0 0"/>
        <inertia ixx="0.0002473" ixy="1e-06" ixz="1e-06" iyy="1.763e-05" iyz="1e-06" izz="0.0002521"/>
      </inertial>
    </link>

    <joint name="${prefix}_hand_joint" type="fixed">
      <parent link="${prefix}_link7"/>
      <child link="${prefix}_hand"/>
      <origin xyz="0 0 0.1001" rpy="0 0 0"/>
    </joint>

    <!-- TCP -->
    <link name="${prefix}_hand_tcp"/>
    <joint name="${prefix}_hand_tcp_joint" type="fixed">
      <parent link="${prefix}_hand"/>
      <child link="${prefix}_hand_tcp"/>
      <origin xyz="0 0 0.08" rpy="0 0 0"/>
    </joint>

    <!-- Fingers -->
    <link name="${prefix}_left_finger">
      <visual>
        <origin xyz="0 -0.05 -0.673001" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/ee/openarm_hand/visual/finger.dae" scale="0.001 0.001 0.001"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 -0.05 -0.673001" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/ee/openarm_hand/collision/finger.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.03602545343277134"/>
        <origin xyz="0.0064528 0.01702 0.0219685" rpy="0 0 0"/>
        <inertia ixx="2.375e-05" ixy="0" ixz="0" iyy="2.375e-05" iyz="0" izz="7.5e-06"/>
      </inertial>
    </link>

    <link name="${prefix}_right_finger">
      <visual>
        <origin xyz="0 0.05 -0.673001" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/ee/openarm_hand/visual/finger.dae"
                scale="0.001 ${reflect * -0.001} 0.001"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0.05 -0.673001" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://openarm_description/meshes/ee/openarm_hand/collision/finger.stl"
                scale="0.001 ${reflect * -0.001} 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.03602545343277134"/>
        <origin xyz="0.0064528 ${reflect * -0.01702} 0.0219685" rpy="0 0 0"/>
        <inertia ixx="2.375e-05" ixy="0" ixz="0" iyy="2.375e-05" iyz="0" izz="7.5e-06"/>
      </inertial>
    </link>

    <joint name="${prefix}_finger_joint1" type="prismatic">
      <parent link="${prefix}_hand"/>
      <child link="${prefix}_right_finger"/>
      <origin xyz="0 -0.006 0.015" rpy="0 0 0"/>
      <axis xyz="0 -1 0"/>
      <limit effort="333" lower="0.0" upper="0.044" velocity="10.0"/>
    </joint>

    <joint name="${prefix}_finger_joint2" type="prismatic">
      <parent link="${prefix}_hand"/>
      <child link="${prefix}_left_finger"/>
      <origin xyz="0 0.006 0.015" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit effort="333" lower="0.0" upper="0.044" velocity="10.0"/>
      <mimic joint="${prefix}_finger_joint1"/>
    </joint>

  </xacro:macro>

  <!-- ==================== Instantiate Arms ==================== -->
  <xacro:openarm_arm prefix="openarm_left" reflect="1"/>
  <xacro:openarm_arm prefix="openarm_right" reflect="-1"/>

  <!-- ==================== Camera (RealSense D435i) ==================== -->
  <xacro:if value="$(arg use_camera)">
    <joint name="camera_joint" type="fixed">
      <origin xyz="0.035 0 0.63" rpy="0 0.5235988 0"/>
      <parent link="openarm_body_link0"/>
      <child link="camera_bottom_screw_frame"/>
    </joint>
    <link name="camera_bottom_screw_frame"/>

    <joint name="camera_link_joint" type="fixed">
      <origin xyz="0.0106 0.0175 0.0125" rpy="0 0 0"/>
      <parent link="camera_bottom_screw_frame"/>
      <child link="camera_link"/>
    </joint>

    <link name="camera_link">
      <visual>
        <origin xyz="0.0043 -0.0175 0" rpy="1.5707963267948966 0 1.5707963267948966"/>
        <geometry>
          <mesh filename="file:///home/ldp/openarm_ws/install/openarm_description/share/openarm_description/meshes/cam/d435.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 -0.0175 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.02505 0.09 0.025"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.072"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.003881243" ixy="0.0" ixz="0.0" iyy="0.000498940" iyz="0.0" izz="0.003879257"/>
      </inertial>
    </link>
  </xacro:if>

  <!-- ==================== Table ==================== -->
  <xacro:if value="$(arg use_table)">
    <link name="table">
      <visual>
        <origin xyz="0 0 0"/>
        <geometry>
          <box size="0.5 0.6 0.3"/>
        </geometry>
        <material name="table_color">
          <color rgba="0.8 0.6 0.4 1"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0"/>
        <geometry>
          <box size="0.5 0.6 0.3"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0.15"/>
        <mass value="5"/>
        <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.05" iyz="0" izz="0.05"/>
      </inertial>
    </link>

    <joint name="table_to_world" type="fixed">
      <parent link="world"/>
      <child link="table"/>
      <origin xyz="0.35 0 0.15" rpy="0 0 0"/>
    </joint>
  </xacro:if>

</robot>